[flake8]
max-line-length = 88
docstring-convention = google
import-order-style = google

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    supabase/migrations

ignore =
    E203,
    E501,
    W503,
    D100,
    D104,
    D107,
    D212

select = E,W,F,C,N,D

max-complexity = 10

per-file-ignores =
    __init__.py:F401,D104
    tests/*:D100,D101,D102,D103
    app/database.py:D102
